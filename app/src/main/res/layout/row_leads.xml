<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/lead_detalle">


    <de.hdodenhof.circleimageview.CircleImageView

        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/img_perfil_lead"
        android:src="@drawable/ic_liked"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CumpleaÃ±os"
        android:id="@+id/categoria_del_evento"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:lines="1"
        android:paddingTop="10dp"
        android:ellipsize="marquee"
        android:layout_alignTop="@+id/img_perfil_lead"
        android:layout_toRightOf="@+id/img_perfil_lead"
        android:layout_toEndOf="@+id/img_perfil_lead" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Este Usuario es amigo tuyo en facebook y esta haciendo preguntas  ."
        android:id="@+id/descripcion_evento"
        android:layout_marginRight="15dp"
        android:lines="2"
        android:paddingBottom="10dp"
        android:ellipsize="end"
        android:layout_below="@+id/categoria_del_evento"
        android:layout_alignLeft="@+id/categoria_del_evento"
        android:layout_alignStart="@+id/categoria_del_evento" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="17 julio 1090 ."
        android:id="@+id/fecha_evento"
        android:layout_marginRight="15dp"
        android:lines="2"
        android:paddingBottom="10dp"
        android:ellipsize="end"
        android:layout_below="@+id/descripcion_evento"
        android:layout_alignLeft="@+id/descripcion_evento"
        android:layout_alignStart="@+id/descripcion_evento" />




</RelativeLayout>